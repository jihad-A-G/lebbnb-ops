# Backend Environment Variables
# Copy this file to .env and configure your values

PORT=5000
NODE_ENV=development
MONGODB_URI=mongodb://localhost:27017/lebbnb

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# JWT Configuration
# Generate secure secrets using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email Configuration
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password
COMPANY_NAME=Lebbnb
