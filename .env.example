# ================================
# DOCKER ENVIRONMENT CONFIGURATION
# ================================
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control

# ================================
# General Configuration
# ================================
NODE_ENV=production
COMPOSE_PROJECT_NAME=lebbnb

# ================================
# Port Configuration
# ================================
FRONTEND_PORT=3000
BACKEND_PORT=5000
MONGO_PORT=27017

# ================================
# MongoDB Configuration
# ================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change_this_strong_password_123
MONGO_DATABASE=lebbnb

# ================================
# Backend API Configuration
# ================================

# CORS - Set to your frontend URL
# For production VPS, use: https://yourdomain.com or http://your-vps-ip:3000
CORS_ORIGIN=http://localhost:3000

# JWT Secrets (CRITICAL: Generate strong random strings)
# Generate using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email Configuration
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password
COMPANY_NAME=Lebbnb

# ================================
# Frontend Configuration
# ================================

# API URL - Set to your backend URL
# For production VPS: http://your-vps-ip:5000/api or https://api.yourdomain.com/api
NEXT_PUBLIC_API_URL=http://localhost:5000/api
